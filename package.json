{
    "name": "Testmatic",

    "version": "0.0.1",

    "description": "Automatic testing as a complement to unit tests",

    "author": "Feng Qiu <me@pagerendered.in>",

    "license": "GPLv2",

    "keywords": ["automatic", "testing", "autotest", "regression", "test"],

    "main" : "./index.js",

    "scripts": {
        "pretest": "find . -name \"*.js\" -not \\( -path \"*/node_modules/*\" -prune \\) -print0 | xargs -0 jshint --verbose",
        "test": "make test"
    },

    "dependencies": {
        "mkdirp": "0.5.x",
        "chai": "1.9.x",
        "chai-highlight": "0.2.x"
    },

    "devDependencies": {
        "mocha": "*",
        "jshint": "*",
        "chai": "*"
    },

    "engines": {
        "node": ">=0.8.x"
    },

    "repository": {
        "type": "git",
        "url": "https://github.com/pagerenderedin/testmatic.git"
    },

    "bugs": {
        "url": "https://github.com/pagerenderedin/testmatic/issues"
    }
}
